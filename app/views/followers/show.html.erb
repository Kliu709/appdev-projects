<div>
  <div>
    <h1>
     <%= @the_user.username %> Follower details
    </h1>


<hr>
  <div>
    <div>
      <h4>
        Pending Follow requests(all follower requests where the current user is the recipient_id)
      </h4>
    </div>

    <ul>
      <% @list_of_follow_requests.each do |a_follower| %>
      <li>
        <%= User.where({:id => a_follower.sender_id}).first.username%>
        <form action="/modify_follower/<%=a_follower.sender_id%>" method="post">
              <input name="query_status" value="accepted" type="hidden">

              <button>
                Accept
              </button>
            </form>

            <form action="/modify_follower/<%=a_follower.sender_id%>" method="post">
              <input name="query_status" value="rejected" type="hidden">
            
              <button>
                Reject
              </button>
        </form>
      </li>
      <%end %>
    </ul>
  </div>

<hr>
  <div>
    <div>
      <h2>
        My friends 
      </h2>
    </div>
    <table>
      <tr>
        <th>
          Friend Username
        </th>

      </tr>

      <% @list_of_friends_received.each do |a_friend| %>
      <tr>


        <td>
          <%= User.where({:id => a_friend.sender_id}).first.username%>
        </td>

        <td>
          <a href="/delete_follower/<%= a_friend.id %>">
            Delete this friend 
          </a>
        </td>

      </tr>
      <% end %>
      <!--
      <% @list_of_friends_sent.each do |a_friend| %>
      <tr>


        <td>
          <%= User.where({:id => a_friend.recipient_id}).first.username%>
        </td>

        <td>
          <a href="/delete_follower/<%= a_friend.id %>">
            Delete this friend 
          </a>
        </td>

      </tr>
      <% end %>
      --> 
    </table>

  </div>


  <div>
    <h3> Add a friend! </h3>
    <form action="/insert_follower" method="post">
        <label for="follower_box">
          Friend Username: 
        </label>

        <input type="text" id="follower_box" name="query_recipient_name">
    </form>
  </div>
<hr>
